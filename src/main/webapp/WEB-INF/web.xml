<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Servlet Mapping -->
    <servlet>
        <servlet-name>Semester-1</servlet-name>
        <servlet-class>com.cgpa.servlets.Semester1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Semester-1</servlet-name>
        <url-pattern>/semester-1</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Semester-2</servlet-name>
        <servlet-class>com.cgpa.servlets.Semester2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Semester-2</servlet-name>
        <url-pattern>/semester-2</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Semester-3</servlet-name>
        <servlet-class>com.cgpa.servlets.Semester3</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Semester-3</servlet-name>
        <url-pattern>/semester-3</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Semester-4</servlet-name>
        <servlet-class>com.cgpa.servlets.Semester4</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Semester-4</servlet-name>
        <url-pattern>/semester-4</url-pattern>
    </servlet-mapping>

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>/webapp/index.html</welcome-file>
    </welcome-file-list>

</web-app>
